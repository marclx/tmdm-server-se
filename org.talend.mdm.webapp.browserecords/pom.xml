        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.core</artifactId>
            <classifier>ejbs</classifier>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.core</artifactId>
            <classifier>jaas</classifier>
            <scope>test</scope>
        </dependency>        
    </dependencies>

    <build>
        <plugins>
            <!-- generate jar file with sources and classes -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-source</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-lib</id>
                        <configuration>
                            <classifier>lib</classifier>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>gwt-compile</id>
                        <configuration>
                            <modules>
                                <module>org.talend.mdm.webapp.browserecords.BrowseRecords</module>
                                <module>org.talend.mdm.webapp.browserecordsinstaging.BrowseRecordsInStaging</module>
                            </modules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <!-- Apply dev mode exclusions -->
                    <execution>
                        <id>devmode-exclusions</id>
                        <phase>prepare-package</phase>
                    </execution>
                    <!-- Deploy to Jboss -->
                    <execution>
                        <id>deploy-jboss</id>
                        <configuration>
                            <tasks>
                                <delete file="${jboss.deploy.dir}/${project.name}.war" />
                                <delete file="${jboss.lib.dir}/${project.name}.jar" />

                                <copy file="${project.build.directory}/${project.build.finalName}.war"
                                    tofile="${jboss.deploy.dir}/${project.name}.war" />
                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-lib.jar"
                                    tofile="${jboss.lib.dir}/${project.name}.jar" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>