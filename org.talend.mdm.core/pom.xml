    <parent>
        <groupId>org.talend.mdm</groupId>
        <artifactId>mdm-base</artifactId>
        <version>6.0-SNAPSHOT</version>
        <relativePath>../org.talend.mdm.base/pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.talend.mdm.core</artifactId>
    <name>org.talend.mdm.core</name>
    <packaging>war</packaging>

    <properties>
        <war>zz.30.core</war>
        <ejbs>zz.20.core</ejbs>
        <lib>z.mdm.core</lib>
        <service>org.talend.mdm.jullog4jservice</service>
        <jaas>org.talend.mdm.jaas</jaas>
        <util>org.talend.mdm.util</util>
        <version.properties>product_version.properties</version.properties>
    </properties>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>test</testSourceDirectory>
        <resources>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>**/**.conf</include>
                    <include>**/**.xsd</include>
                    <include>**/**.xml</include>
                    <include>**/**.dtd</include>
                    <include>**/**.txt</include>
                    <include>**/initdb/data/**</include>
                    <include>**/util/phonet-utf8.*</include>
                    <include>**/util/*.properties</include>                                
                </includes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>test</directory>
                <includes>
                    <include>**/**.zip</include>
                    <include>**/**.xsd</include>
                    <include>**/**.dtd</include>
                    <include>**/**.log</include>
                </includes>
                <filtering>false</filtering>
            </testResource>
            <testResource>
                <directory>test</directory>
                <includes>
                    <include>**/**.xml</include>
                </includes>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-ejbs</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>ejbs</classifier>
                            <includes>
                                <include>**</include>
                                <include>${version.properties}</include>
                            </includes>
                            <excludes>
                                <exclude>com/amalto/core/util/LoginModuleDelegator.class</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-lib</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>lib</classifier>
                            <includes>
                                <include>**/util/*.class</include>
                                <include>**/*POJO*.class</include>
                                <include>${version.properties}</include>
                            </includes>
                            <excludes>
                                <exclude>com/amalto/core/util/LoginModuleDelegator.class</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-ejbs-client</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>ejbs-client</classifier>
                            <includes>
                                <include>**/util/*.class</include>
                                <include>**/util/*.properties</include>
                                <include>**/*POJO*.class</include>
                                <include>**/SchemaCoreAgent.class</include>
                                <include>**/remote/*.class</include>
                                <include>**/server/*.class</include>
                                <include>**/integrity/*.class</include>
                                <include>**/ejb/ServiceBean.class</include>
                                <include>${version.properties}</include>
                            </includes>
                            <excludes>
                                <exclude>com/amalto/core/util/LoginModuleDelegator.class</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-service</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>service</classifier>
                            <includes>
                                <include>com/amalto/core/util/JULLog4j*.class</include>
                                <include>${version.properties}</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-jaas</id>
                        <phase>package</phase>                        
                        <configuration>
                            <classifier>jaas</classifier>
                            <includes>
                                <include>com/amalto/core/util/LoginModuleDelegator.class</include>
                                <include>${version.properties}</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>                        
                    </execution>
                    <execution>
                        <id>jar-util</id>
                        <phase>package</phase>                        
                        <configuration>
                            <classifier>util</classifier>
                            <includes>
                                <include>com/amalto/core/util/LocaleUtil.class</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>                        
                    </execution>                                                                        
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>${basedir}/war/WEB-INF/web.xml</webXml>
                    <packagingIncludes>logviewer/**,META-INF/**,WEB-INF/*,WEB-INF/classes/**/servlet/*.class,WEB-INF/classes/${version.properties}</packagingIncludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy-jboss-dev-libs</id>
                        <phase>install</phase>
                        <configuration>
                            <includeArtifactIds>mysql-connector-java,ojdbc6,sqljdbc4,postgresql</includeArtifactIds>
                        </configuration>
                    </execution>
                    <execution>
                        <id>deploy-extra-libs</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>mysql-connector-java,ojdbc6,sqljdbc4,postgresql</includeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy-jboss</id>
                        <configuration>
                            <tasks>
                                <delete file="${jboss.lib.dir}/${lib}.jar" />
                                <delete file="${jboss.lib.dir}/${service}.jar" />
                                <delete file="${jboss.lib.dir}/${jaas}.jar" />
                                <delete file="${jboss.deploy.dir}/${ejbs}.jar" />
                                <delete file="${jboss.deploy.dir}/${war}.war" />
                                <delete file="${jboss.conf.dir}/mdm.conf" />
                                <delete file="${jboss.conf.dir}/mdm.conf.template" />
                                <delete file="${jboss.conf.dir}/datasources.xml.template" />

                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-lib.jar"
                                    tofile="${jboss.lib.dir}/${lib}.jar" />
                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-service.jar"
                                    tofile="${jboss.lib.dir}/${service}.jar" />
                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-jaas.jar"
                                    tofile="${jboss.lib.dir}/${jaas}.jar" />
                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-ejbs.jar"
                                    tofile="${jboss.deploy.dir}/${ejbs}.jar" />
                                <copy file="${project.build.directory}/${project.build.finalName}.war"
                                    tofile="${jboss.deploy.dir}/${war}.war" />
                                <copy file="mdm.conf" tofile="${jboss.conf.dir}/mdm.conf" />
                                <copy file="mdm.conf.template" tofile="${jboss.conf.dir}/mdm.conf.template" />
                                <copy file="war/default-datasources.xml" tofile="${jboss.conf.dir}/datasources.xml.template" />
                                
                                <echo message="Remove commons-codec library" />
                                <delete file="${jboss.lib.dir}/commons-codec.jar" verbose="true" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

